syntax enable
filetype plugin indent on

set encoding=utf-8

set number
set relativenumber
set smartindent
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab

set wrap

set hlsearch
set incsearch

set smartcase
set ignorecase
set showmatch

set backspace=indent,eol,start

set ruler

set laststatus=2

let mapleader = " "
nnoremap <leader>e :Explore<CR>

set termguicolors
